Nota que falta para ser aprovado

var n1 = Number(window.prompt('digite sua primeira nota: ')) 
var n2 = Number(window.prompt('digite sua segunda nota: '))
var pnota = 21 - (n1 + n2) 

window.alert(`Sua póxima nota deve ser no mínimo ${pnota} para ser aprovado`)
